{
  "name": "Send to Google Sheet",
  "description": "Save links to Google Sheets with one click",
  "version": "2.0.0",
  "manifest_version": 3,
  "oauth2": {
    "client_id": "89072064359-1k63rd50meu0do5tkloj3tq48hjdil18.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/spreadsheets"]
  },
  "permissions": [
    "identity",
    "contextMenus", 
    "storage",
    "notifications",
    "tabs",
    "activeTab",
    "scripting",
    "alarms"
  ],

  "host_permissions": ["https://sheets.googleapis.com/*"],

  "oauth2": {
    "client_id": "89072064359-1k63rd50meu0do5tkloj3tq48hjdil18.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/spreadsheets"]
  },

  "background": { "service_worker": "background.js" },
  "options_page": "options.html",

  "action": {
    "default_icon": "icon128.png",
    "default_title": "Click to save current URL | Cases today: 0"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icon128.png"],
      "matches": ["<all_urls>"]
    }
  ],

  "commands": {
    "save-selection": {
      "suggested_key": { "default": "Ctrl+I", "mac": "Command+I" },
      "description": "Save selected text or link to Google Sheet"
    },
    "save-current-url": {
      "suggested_key": { "default": "Ctrl+Shift+I", "mac": "Command+Shift+I" },
      "description": "Save current page URL to Google Sheet"
    }
  },

  "icons": { "128": "icon128.png" }
}